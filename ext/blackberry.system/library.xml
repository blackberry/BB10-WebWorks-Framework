<?xml version="1.0" encoding="utf-8"?>
<library>
    <extension id="blackberry.system">
        <entryClass>blackberry.system.System</entryClass>
    </extension>
    <platforms>
        <platform value="BBX">
            <target version="default" config="BBX_XHR" />
        </platform>
    </platforms>
    <configurations>
        <configuration name="BBX_XHR" version="1.0" comment="For XHR architecture for Java implementation">         
            <src type="text/javascript" path="client.js" comment="Application JS XHR dispatcher" />
            <src type="text/javascript" path="server.js" comment="Application JS interface" />            
<!--            <src type="text/actionscript" path="src/Air/Application/src" comment="ActionScript implementation" /> -->
        </configuration>
    </configurations>
    <features>
        <feature id="blackberry.system" version="1.0.0" />
    </features>
</library>

